{
  "name": "icomment",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "setup": "bun scripts/setup.ts",
    "teardown": "bun scripts/teardown.ts",
    "deploy": "bun scripts/deploy.ts",
    "dev": "wrangler pages dev src",
    "build": "bun build src/main.tsx --outdir dist --format=esm",
    "build:functions": "bun build functions/_middleware.ts --outdir dist --format=esm",
    "build:all": "bun run build && bun run build:functions",
    "type-check": "tsc --noEmit",
    "db:create": "wrangler d1 create icomment-db",
    "db:migrate": "wrangler d1 execute icomment-db --file migrations/0001_init_schema.sql --remote",
    "kv:create": "wrangler kv:namespace create icomment-kv",
    "r2:create": "wrangler r2 bucket create icomment-attachments",
    "admin:list": "bun scripts/list-users.ts",
    "admin:toggle": "bun scripts/toggle-admin.ts"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250116.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "typescript": "^5.3.3",
    "wrangler": "^3.60.0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
