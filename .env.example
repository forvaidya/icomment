# Guru - Comment System Environment Configuration
# Copy this file to .env.local and configure values for your environment

# =====================================================
# Core Application Settings
# =====================================================

# Enable or disable authentication (false = POC mode with hardcoded user)
AUTH_ENABLED=false

# Application name
APP_NAME=Guru (Dev)

# Application logo URL
APP_LOGO_URL=/logo.svg

# Brand color (hex code)
BRAND_COLOR=#a855f7

# Environment type
ENVIRONMENT=development

# =====================================================
# File Upload Settings
# =====================================================

# Maximum attachment size in bytes (5MB default)
MAX_ATTACHMENT_SIZE=5242880

# Allowed file types (comma-separated MIME types)
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain

# =====================================================
# Rate Limiting
# =====================================================

# Enable or disable rate limiting
RATE_LIMIT_ENABLED=false

# Rate limit window duration in milliseconds
RATE_LIMIT_WINDOW_MS=60000

# =====================================================
# Auth0 Integration (Required when AUTH_ENABLED=true)
# =====================================================

# Auth0 tenant domain
# AUTH0_DOMAIN=your-tenant.us.auth0.com

# Auth0 application client ID
# AUTH0_CLIENT_ID=your_client_id

# Auth0 application client secret (keep secure!)
# AUTH0_CLIENT_SECRET=your_client_secret

# Auth0 API audience
# AUTH0_API_AUDIENCE=https://api.guru.local

# =====================================================
# Database
# =====================================================

# D1 Database binding name (configured in wrangler.toml)
D1_BINDING=db

# =====================================================
# Cache & Storage
# =====================================================

# KV Store namespace binding name (configured in wrangler.toml)
KV_BINDING=kv

# R2 bucket binding name (configured in wrangler.toml)
R2_BINDING=r2

# R2 bucket name for file storage
# R2_BUCKET_NAME=guru-attachments

# =====================================================
# Session Management
# =====================================================

# Session TTL in seconds (7 days default)
SESSION_TTL=604800

# Session cookie name
SESSION_COOKIE_NAME=session_id

# =====================================================
# API Configuration
# =====================================================

# API base URL
API_BASE_URL=http://localhost:8787

# CORS allowed origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8787

# =====================================================
# Logging
# =====================================================

# Log level: debug, info, warn, error
LOG_LEVEL=debug

# =====================================================
# Feature Flags
# =====================================================

# Enable comment threading
ENABLE_COMMENT_THREADING=true

# Enable file attachments
ENABLE_ATTACHMENTS=true

# Enable discussion archiving
ENABLE_ARCHIVING=true

# Enable user profiles
ENABLE_USER_PROFILES=true
